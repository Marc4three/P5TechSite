        // Add the missing getForecastStatus function
        function getForecastStatus(tasks, progressPercent) {
            // Default status
            let status = 'On Track';
            let detail = 'Meeting schedule';
            let className = 'status-on-track';
            
            // If no tasks, return default status
            if (!tasks || tasks.length === 0) {
                return { status, detail, class: className };
            }
            
            // Calculate expected progress based on due dates
            const now = new Date();
            const dueDates = tasks
                .filter(task => task.dueDateTime)
                .map(task => new Date(task.dueDateTime));
            
            if (dueDates.length > 0) {
                const earliestDueDate = new Date(Math.min(...dueDates));
                const latestDueDate = new Date(Math.max(...dueDates));
                
                // Calculate total duration in days
                const totalDuration = Math.ceil((latestDueDate - earliestDueDate) / (1000 * 60 * 60 * 24));
                
                // Calculate elapsed time
                const elapsedTime = Math.ceil((now - earliestDueDate) / (1000 * 60 * 60 * 24));
                
                // Calculate expected progress
                const expectedProgress = Math.min(100, Math.max(0, (elapsedTime / totalDuration) * 100));
                
                // Compare actual progress with expected progress
                const progressDifference = expectedProgress - progressPercent;
                
                if (progressDifference > 15) {
                    status = 'Off Track';
                    detail = 'Significantly behind schedule';
                    className = 'status-off-track';
                } else if (progressDifference > 5) {
                    status = 'At Risk';
                    detail = 'Slightly behind schedule';
                    className = 'status-at-risk';
                }
            }
            
            return { status, detail, class: className };
        }

