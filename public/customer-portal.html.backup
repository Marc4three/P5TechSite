        // Add the missing getProjectPhase function
        function getProjectPhase(tasks) {
            if (!tasks || tasks.length === 0) {
                return 'Planning';
            }
            
            // Count tasks in each bucket using the mapping
            const toDoCount = tasks.filter(t => {
                if (t.isOverdue) return false;
                const bucketName = t.actualBucketName?.toLowerCase() || '';
                return bucketMapping['to-do'].some(name => bucketName.includes(name));
            }).length;
            
            const inProgressCount = tasks.filter(t => {
                if (t.isOverdue) return false;
                const bucketName = t.actualBucketName?.toLowerCase() || '';
                return bucketMapping['in-progress'].some(name => bucketName.includes(name));
            }).length;
            
            const testedCount = tasks.filter(t => {
                if (t.isOverdue) return false;
                const bucketName = t.actualBucketName?.toLowerCase() || '';
                return bucketMapping['tested'].some(name => bucketName.includes(name));
            }).length;
            
            const completedCount = tasks.filter(t => {
                if (t.isOverdue) return false;
                const bucketName = t.actualBucketName?.toLowerCase() || '';
                return bucketMapping['completed'].some(name => bucketName.includes(name));
            }).length;
            
            const overdueCount = tasks.filter(t => t.isOverdue).length;
            
            // Calculate percentages
            const totalTasks = tasks.length;
            const toDoPercent = (toDoCount / totalTasks) * 100;
            const inProgressPercent = (inProgressCount / totalTasks) * 100;
            const testedPercent = (testedCount / totalTasks) * 100;
            const completedPercent = (completedCount / totalTasks) * 100;
            const overduePercent = (overdueCount / totalTasks) * 100;
            
            // Determine phase based on bucket distribution
            if (completedPercent >= 100) {
                return 'Completed';
            } else if (completedPercent >= 75) {
                return 'Final Review';
            } else if (testedPercent > 0) {
                return 'Testing';
            } else if (inProgressPercent > 0) {
                return 'Development';
            } else if (toDoPercent > 0) {
                return 'Planning';
            } else {
                return 'Planning';
            }
        }

        async function updateTaskStatus(taskId, completed) {
            try {
                showLoading();
                
                // Get the task to find its current bucket
                const accounts = window.msalInstance.getAllAccounts();
                if (accounts.length === 0) {
                    throw new Error('No authenticated account found');
                }
                
                // Find the plan ID for this task
                const plans = await plannerIntegration.getPlans();
                let planId = null;
                let task = null;
                
                for (const plan of plans) {
                    const tasks = await plannerIntegration.getTasks(plan.id);
                    const foundTask = tasks.find(t => t.id === taskId);
                    if (foundTask) {
                        task = foundTask;
                        planId = plan.id;
                        break;
                    }
                }
                
                if (!task || !planId) {
                    throw new Error('Task not found');
                }
                
                // Get buckets for the plan
                const buckets = await plannerIntegration.getBuckets(planId);
                
                // Find the appropriate bucket based on completion status
                let targetBucketId = null;
                
                if (completed) {
                    // Find a bucket with "complete" in the name
                    const completeBucket = buckets.find(b => 
                        bucketMapping['completed'].some(name => b.name.toLowerCase().includes(name))
                    );
                    if (completeBucket) {
                        targetBucketId = completeBucket.id;
                    }
                } else {
                    // Find a bucket with "to do" in the name
                    const toDoBucket = buckets.find(b => 
                        bucketMapping['to-do'].some(name => b.name.toLowerCase().includes(name))
                    );
                    if (toDoBucket) {
                        targetBucketId = toDoBucket.id;
                    }
                }
                
                // If no appropriate bucket found, use the first bucket
                if (!targetBucketId && buckets.length > 0) {
                    targetBucketId = buckets[0].id;
                }
                
                // Update the task's bucket
                if (targetBucketId) {
                    await plannerIntegration.updateTaskBucket(taskId, targetBucketId);
                }
                
                // Refresh the projects view
                if (accounts.length > 0) {
                    await handleAuthenticationSuccess(accounts[0]);
                }
            } catch (error) {
                console.error('Error updating task status:', error);
                alert('Failed to update task status. Please try again.');
            } finally {
                hideLoading();
            }
        }

