    <script>
        let plannerIntegration;
        const userName = document.getElementById('userName');
        const loginButton = document.getElementById('loginButton');
        const logoutButton = document.getElementById('logoutButton');
        const dashboard = document.getElementById('dashboard');
        const loadingOverlay = document.getElementById('loadingOverlay');
        const projectsGrid = document.getElementById('projectsGrid');
        const orgLogo = document.getElementById('orgLogo');
        const orgName = document.getElementById('orgNameHeader');

        // Add this before the script's event listeners and functions
        const bucketOrder = [
            { id: 'planning', name: 'Planning', class: 'bucket-planning' },
            { id: 'todo', name: 'To-Do', class: 'bucket-todo' },
            { id: 'in-progress', name: 'In-Progress', class: 'bucket-in-progress' },
            { id: 'in-qa', name: 'In-QA', class: 'bucket-in-qa' },
            { id: 'uat', name: 'UAT/Retest', class: 'bucket-uat' },
            { id: 'completed', name: 'Completed', class: 'bucket-completed' }
        ];

        // Define bucket mapping for categorization
        const bucketMapping = {
            'to-do': ['planning', 'to do', 'to-do', 'todo'],
            'in-progress': ['in progress', 'in-progress', 'inprogress'],
            'tested': ['in-qa', 'in qa', 'qa', 'in-uat', 'in uat', 'uat', 'testing', 'test', 'tested'],
            'completed': ['completed', 'done', 'finished'],
            'overdue': ['overdue', 'late', 'delayed']
        };

        // Add a test function to verify bucket fetching
        async function testBucketFetching() {
            try {
                console.log('Testing bucket fetching...');
                const accounts = window.msalInstance.getAllAccounts();
                if (accounts.length > 0) {
                    // Get the first plan ID from the planner integration
                    const planIds = plannerIntegration.planIds;
                    if (planIds && planIds.length > 0) {
                        const planId = planIds[0];
                        console.log(`Testing bucket fetching for plan: ${planId}`);
                        
                        // Fetch buckets
                        const buckets = await plannerIntegration.getBuckets(planId);
                        console.log(`Fetched ${buckets.length} buckets for plan ${planId}:`, buckets);
                        
                        // Log detailed bucket information
                        console.log('Bucket details:');
                        buckets.forEach((bucket, index) => {
                            console.log(`Bucket ${index + 1}:`, {
                                id: bucket.id,
                                name: bucket.name,
                                planId: bucket.planId,
                                orderHint: bucket.orderHint
                            });
                        });
                        
                        // Fetch tasks
                        const tasks = await plannerIntegration.getTasks(planId);
                        console.log(`Fetched ${tasks.length} tasks for plan ${planId}:`, tasks);
                        
                        // Log detailed task information
                        console.log('Task details:');
                        tasks.forEach((task, index) => {
                            console.log(`Task ${index + 1}:`, {
                                id: task.id,
                                title: task.title,
                                bucketId: task.bucketId,
                                percentComplete: task.percentComplete,
                                dueDateTime: task.dueDateTime
                            });
                        });
                        
                        // Create a map of bucket IDs to names
                        const bucketMap = {};
                        buckets.forEach(bucket => {
                            bucketMap[bucket.id] = bucket.name;
                        });
                        
                        // Add bucket names to tasks
                        tasks.forEach(task => {
                            task.actualBucketName = bucketMap[task.bucketId];
                            console.log(`Task "${task.title}" is in bucket: "${task.actualBucketName}"`);
                        });
                        
                        // Log task categorization using the new mapping
                        console.log('Task categorization by bucket:');
                        
                        const toDoTasks = tasks.filter(t => {
                            const bucketName = t.actualBucketName?.toLowerCase() || '';
                            return bucketMapping['to-do'].some(name => bucketName.includes(name));
                        });
                        
                        const inProgressTasks = tasks.filter(t => {
                            const bucketName = t.actualBucketName?.toLowerCase() || '';
                            return bucketMapping['in-progress'].some(name => bucketName.includes(name));
                        });
                        
                        const completedTasks = tasks.filter(t => {
                            const bucketName = t.actualBucketName?.toLowerCase() || '';
                            return bucketMapping['completed'].some(name => bucketName.includes(name));
                        });
                        
                        const testingTasks = tasks.filter(t => {
                            const bucketName = t.actualBucketName?.toLowerCase() || '';
                            return bucketMapping['tested'].some(name => bucketName.includes(name));
                        });
                        
                        console.log('- To Do:', toDoTasks.length);
                        console.log('- In Progress:', inProgressTasks.length);
                        console.log('- Completed:', completedTasks.length);
                        console.log('- Testing:', testingTasks.length);
                        
                        // Log task categorization by percent complete
                        console.log('Task categorization by percent complete:');
                        const pendingStart = tasks.filter(t => t.percentComplete === 0);
                        const inProgress = tasks.filter(t => t.percentComplete > 0 && t.percentComplete < 100);
                        const completed = tasks.filter(t => t.percentComplete === 100);
                        
                        console.log('- Pending Start:', pendingStart.length);
                        console.log('- In Progress:', inProgress.length);
                        console.log('- Completed:', completed.length);
                        
                        // Log tasks that would be categorized differently
                        console.log('Tasks that would be categorized differently:');
                        
                        // Tasks in "To Do" bucket but not in Pending Start
                        const toDoNotPending = toDoTasks.filter(t => t.percentComplete > 0);
                        if (toDoNotPending.length > 0) {
                            console.log('Tasks in "To Do" bucket but not in Pending Start:', toDoNotPending);
                        }
                        
                        // Tasks in Pending Start but not in "To Do" bucket
                        const pendingNotToDo = pendingStart.filter(t => !toDoTasks.includes(t));
                        if (pendingNotToDo.length > 0) {
                            console.log('Tasks in Pending Start but not in "To Do" bucket:', pendingNotToDo);
                        }
                    } else {
                        console.error('No plan IDs available');
                    }
                } else {
                    console.error('No authenticated user found');
                }
            } catch (error) {
                console.error('Error testing bucket fetching:', error);
            }
        }

        function showLoading() {
            loadingOverlay.style.display = 'flex';
        }

        function hideLoading() {
            loadingOverlay.style.display = 'none';
