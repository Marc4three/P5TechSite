        function enterOverlayMode(projectCard, planId) {
            // Clone the project card
            const cardClone = projectCard.cloneNode(true);
            
            // Add expanded class to original card
                    projectCard.classList.add('expanded');
            
            // Hide other cards
            document.querySelectorAll('.project-card').forEach(card => {
                if (card !== projectCard) {
                    card.classList.add('hidden');
                }
            });
            
            // Show overlay container
            const overlayContainer = document.getElementById('overlay-container');
            overlayContainer.style.display = 'block';
            
            // Create overlay content container
            const overlayContent = document.createElement('div');
            overlayContent.className = 'overlay-content';
            overlayContent.id = `overlay-content-${planId}`;
            
            // Add card clone to overlay content
            overlayContent.appendChild(cardClone);
            
            // Add back button
                    const backButton = document.createElement('button');
            backButton.className = 'back-button';
            backButton.textContent = '‚Üê Back to Projects';
            backButton.onclick = returnToMainView;
            overlayContainer.appendChild(backButton);
            
            // Add overlay content to container
            overlayContainer.appendChild(overlayContent);
            
            // Fade in overlay
            setTimeout(() => {
                overlayContainer.style.opacity = '1';
            }, 10);
            
            // Fetch and display details
            fetchAndDisplayDetails(planId, overlayContent);
        }
        
        function returnToMainView() {
            // Get elements
            const overlayContainer = document.getElementById('overlay-container');
            const expandedCard = document.querySelector('.project-card.expanded');
            
            // Fade out overlay
            overlayContainer.style.opacity = '0';
            
            // Remove expanded class from card
            if (expandedCard) {
                expandedCard.classList.remove('expanded');
            }
            
            // Show other cards
            document.querySelectorAll('.project-card.hidden').forEach(card => {
                card.classList.remove('hidden');
            });
            
            // Hide overlay after animation
            setTimeout(() => {
                overlayContainer.style.display = 'none';
                overlayContainer.innerHTML = '';
            }, 300);
        }
        
        async function fetchAndDisplayDetails(planId, container) {
            try {
                // Fetch tasks and buckets
                const tasks = await plannerIntegration.getTasks(planId);
                const buckets = await plannerIntegration.getBuckets(planId);
                
                // Log bucket information
                console.log(`Buckets for plan ${planId}:`, buckets);
                
                // Create a map of bucket IDs to names
                const bucketMap = {};
                buckets.forEach(bucket => {
                    bucketMap[bucket.id] = bucket.name;
                });
                
                // Add bucket names to tasks
                tasks.forEach(task => {
                    task.actualBucketName = bucketMap[task.bucketId];
                });
                
                // Check for overdue tasks
                const now = new Date();
                tasks.forEach(task => {
                    if (task.dueDateTime) {
                        const dueDate = new Date(task.dueDateTime);
                        if (dueDate < now && 
                            !bucketMapping['completed'].some(name => task.actualBucketName?.toLowerCase().includes(name)) &&
                            !bucketMapping['tested'].some(name => task.actualBucketName?.toLowerCase().includes(name))) {
                            task.isOverdue = true;
                        }
                    }
                });
                
                // Categorize tasks based on bucket names using the mapping
                const toDoTasks = tasks.filter(t => {
                    if (t.isOverdue) return false;
                    const bucketName = t.actualBucketName?.toLowerCase() || '';
                    return bucketMapping['to-do'].some(name => bucketName.includes(name));
                });
                
                const inProgressTasks = tasks.filter(t => {
                    if (t.isOverdue) return false;
                    const bucketName = t.actualBucketName?.toLowerCase() || '';
                    return bucketMapping['in-progress'].some(name => bucketName.includes(name));
                });
                
                const testedTasks = tasks.filter(t => {
                    if (t.isOverdue) return false;
                    const bucketName = t.actualBucketName?.toLowerCase() || '';
                    return bucketMapping['tested'].some(name => bucketName.includes(name));
                });
                
                const completedTasks = tasks.filter(t => {
                    if (t.isOverdue) return false;
                    const bucketName = t.actualBucketName?.toLowerCase() || '';
                    return bucketMapping['completed'].some(name => bucketName.includes(name));
                });
                
                const overdueTasks = tasks.filter(t => t.isOverdue);
                
                // For tasks that don't match any of the above categories, add them to a default category
                const uncategorizedTasks = tasks.filter(t => {
                    if (t.isOverdue) return false;
                    const bucketName = t.actualBucketName?.toLowerCase() || '';
                    return !bucketMapping['to-do'].some(name => bucketName.includes(name)) && 
                           !bucketMapping['in-progress'].some(name => bucketName.includes(name)) && 
                           !bucketMapping['tested'].some(name => bucketName.includes(name)) && 
                           !bucketMapping['completed'].some(name => bucketName.includes(name));
                });
                
                console.log('Bucket-based categorization:');
                console.log('- To Do:', toDoTasks.length);
                console.log('- In Progress:', inProgressTasks.length);
                console.log('- Tested:', testedTasks.length);
                console.log('- Completed:', completedTasks.length);
                console.log('- Overdue:', overdueTasks.length);
                console.log('- Uncategorized:', uncategorizedTasks.length);
                
                // Create details container
                const detailsContainer = document.createElement('div');
                detailsContainer.className = 'project-details';
                detailsContainer.id = `details-${planId}`;
                
                // Update the UI with bucket-based categorization
                updateTaskList(detailsContainer, 'to-do', toDoTasks);
                updateTaskList(detailsContainer, 'in-progress', inProgressTasks);
                updateTaskList(detailsContainer, 'tested', testedTasks);
                updateTaskList(detailsContainer, 'completed', completedTasks);
                updateTaskList(detailsContainer, 'overdue', overdueTasks);
                updateTaskList(detailsContainer, 'uncategorized', uncategorizedTasks);
                
                // Update analytics metrics
                updateAnalyticsMetrics(planId, tasks);
                
                // Add details container to overlay content
                container.appendChild(detailsContainer);
            } catch (error) {
                console.error('Error fetching and displaying details:', error);
            }
        }
        
