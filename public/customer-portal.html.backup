        function setActiveNavButton(buttonText) {
            const buttons = document.querySelectorAll('.sidebar-nav button');
            buttons.forEach(button => {
                button.classList.toggle('active', button.textContent === buttonText);
            });
        }

        async function loadMyTasks() {
            try {
                showLoading();
                const tasks = await plannerIntegration.getAllTasks();
                const myTasksList = document.getElementById('myTasksList');
                myTasksList.innerHTML = '';

                tasks.forEach(task => {
                    const taskElement = document.createElement('div');
                    taskElement.className = 'task-item';
                    
                    let statusClass = 'status-not-started';
                    let statusText = 'Not Started';
                    
                    if (task.percentComplete === 100) {
                        statusClass = 'status-completed';
                        statusText = 'Completed';
                    } else if (task.percentComplete > 0) {
                        statusClass = 'status-in-progress';
                        statusText = 'In Progress';
                    }

                    taskElement.innerHTML = `
                        <div class="task-item-content">
                            <input type="checkbox" class="task-checkbox" ${task.percentComplete === 100 ? 'checked' : ''} 
                                   onchange="updateTaskStatus('${task.id}', this.checked)">
                            <div class="task-details">
                                <span class="task-title">${task.title}</span>
                                <div class="task-meta">
                                    ${task.dueDate ? `<span class="task-due-date">${new Date(task.dueDate).toLocaleDateString()}</span>` : ''}
                                    <span class="task-status ${statusClass}">${statusText}</span>
                        </div>
                        </div>
                    </div>
                    `;

                    myTasksList.appendChild(taskElement);
                });
            } catch (error) {
                console.error('Error loading tasks:', error);
            } finally {
                hideLoading();
            }
        }

        async function handleLoginClick() {
            try {
                showLoading();
                // Get current account
                const currentAccounts = window.msalInstance.getAllAccounts();
                if (currentAccounts.length > 0) {
                    // If we have accounts, try silent token acquisition first
                    try {
                        const response = await window.msalInstance.acquireTokenSilent({
                            ...loginRequest,
                            account: currentAccounts[0]
                        });
                        await handleAuthenticationSuccess(response.account);
                        return;
                    } catch (silentError) {
                        console.log('Silent token acquisition failed, falling back to popup', silentError);
                    }
                }

                const response = await window.msalInstance.loginPopup(loginRequest);
                if (response?.account) {
                    await handleAuthenticationSuccess(response.account);
                }
            } catch (error) {
                console.error('Login failed:', error);
                if (error.name === 'BrowserAuthError' && error.message.includes('interaction_in_progress')) {
                    try {
                        const result = await window.msalInstance.handleRedirectPromise();
                        if (result?.account) {
                            await handleAuthenticationSuccess(result.account);
                        }
                    } catch (redirectError) {
                        console.error('Failed to handle redirect:', redirectError);
                        alert('Login failed. Please try again after clearing your browser cache.');
                    }
                } else {
                    alert('Login failed. Please try again.');
                }
            } finally {
                hideLoading();
            }
        }

        async function handleAuthenticationSuccess(account) {
            try {
                showLoading();
                // Update UI
                userName.textContent = account.name || account.username;
                loginButton.style.display = 'none';
                logoutButton.style.display = 'block';
                dashboard.style.display = 'grid';

                // Initialize Planner integration
                plannerIntegration = new PlannerIntegration();
                const initialized = await plannerIntegration.initialize();
                console.log('Planner integration initialized:', initialized);

                if (initialized) {
                    // Load organization info
                    const orgEmail = account.username;
                    const organization = window.PlannerConfig.getOrganizationFromEmail(orgEmail);
                    
                    if (organization) {
                        // Update organization info in header and logo
                        if (organization.name === "Clinovators") {
                            // For Clinovators, use their logo
                            document.getElementById('orgLogo').src = 'Clinovators Logos-04.png';
                            document.getElementById('orgLogo').alt = 'Clinovators Logos-04.png';
                            document.getElementById('orgNameHeader').textContent = '';
                        } else {
                            // For other organizations, use their name as the logo
                            document.getElementById('orgLogo').src = '';
                            document.getElementById('orgLogo').alt = '';
                            document.getElementById('orgNameHeader').textContent = organization.name;
                        }

                        // Load and display projects
                        const projects = await window.PlannerConfig.getProjectsForOrganization(organization);
                        console.log('Projects for organization:', projects);

                        // Clear existing projects
                        projectsGrid.innerHTML = '';

                        // Display projects
                        for (const project of projects) {
                            const projectCard = document.createElement('div');
                            projectCard.className = 'project-card';
                            projectCard.setAttribute('data-plan-id', project.planId);
                            projectCard.setAttribute('data-channel', project.channel || '');
                            projectCard.setAttribute('data-start-date', project.startDate || '');
                            projectCard.setAttribute('data-due-date', project.dueDate ? project.dueDate.toLocaleDateString() : '');
                            
                            // Calculate project progress
                            let totalTasks = 0;
                            let completedTasks = 0;
                            let projectDueDate = null;
                            
                            try {
                                const tasks = await plannerIntegration.getTasks(project.planId);
                                totalTasks = tasks.length;
                                completedTasks = tasks.filter(task => task.percentComplete === 100).length;
                                const progressPercent = totalTasks > 0 ? Math.round((completedTasks / totalTasks) * 100) : 0;
                                
                                // Calculate forecast status
                                const forecastStatus = getForecastStatus(tasks, progressPercent);

                                // Find the earliest due date among all tasks
                                const dueDates = tasks
                                    .filter(task => task.dueDate)
                                    .map(task => new Date(task.dueDate));
                                
                                if (dueDates.length > 0) {
                                    projectDueDate = new Date(Math.min(...dueDates));
                                }

                                // Check for blockers
                                const hasBlockers = tasks.some(task => task.hasBlocker);
                                const blockerText = getBlockerText(tasks);
                                const blockerIcon = hasBlockers ? `
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd"/>
                                ` : `
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"/>
                                `;

                                // Create project card content
                                projectCard.innerHTML = `
                                    <div class="project-card-header">
                                        <div class="project-header-left">
                                            <h3 class="project-card-title">${project.name}</h3>
                                            <div class="project-card-customer">${project.team}</div>
                                            <div class="project-status-tag ${forecastStatus.class}">
                                                ${forecastStatus.status} - ${forecastStatus.detail}
                        </div>
                            </div>
                                        <div class="header-buttons">
                                            <button class="view-toggle" onclick="toggleProjectDetails(event, '${project.planId}')">
                                View Details
                            </button>
                        </div>
                    </div>
                                    <div class="info-button-container">
                                        <button class="info-button" onclick="toggleForecastInfo(event)" title="Show forecast calculation info">
                                            ‚ÑπÔ∏è
                            </button>
                        </div>
                                    <div class="project-summary">
                                        <div class="project-summary-item">
                                            <svg viewBox="0 0 20 20" fill="currentColor">
                                                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                                                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
                                            </svg>
                                            <span>${completedTasks} of ${totalTasks} tasks completed</span>
                    </div>
                                        <div class="project-summary-item">
                                            <svg viewBox="0 0 20 20" fill="currentColor">
                                                ${blockerIcon}
                                            </svg>
                                            <span class="${hasBlockers ? 'project-blocker' : 'project-no-blocker'}">
                                                ${blockerText}
                                            </span>
                        </div>
                                        <div class="project-summary-item">
                                            <svg viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                                            </svg>
                                            <span class="project-phase">Phase: ${getProjectPhase(tasks)}</span>
                        </div>
                            </div>
                                    <div class="project-card-meta">
                                        <div class="project-card-due-date">
                                            ${projectDueDate ? `Due: ${projectDueDate.toLocaleDateString()}` : 'No due date'}
                            </div>
                                        <div class="project-card-progress">
                            <div class="progress-bar">
                                                <div class="progress-fill" style="width: ${progressPercent}%"></div>
                            </div>
                                            <span class="progress-text">${progressPercent}%</span>
                        </div>
                        </div>
                    </div>
                                <div class="project-details" id="details-${project.planId}">
                                    <!-- Bucket details will be loaded here when expanded -->
                </div>
                                `;

                                projectsGrid.appendChild(projectCard);
                            } catch (error) {
                                console.error('Error calculating project progress:', error);
                                projectCard.innerHTML = '<div class="error-message">Error loading project details</div>';
                                projectsGrid.appendChild(projectCard);
                            }
                        }

                        if (projects.length === 0) {
                            projectsGrid.innerHTML = '<div class="no-projects">No projects found</div>';
