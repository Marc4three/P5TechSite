        function updateAnalyticsMetrics(planId, tasks) {
            // Create analytics container if it doesn't exist
            const detailsContainer = document.getElementById(`details-${planId}`);
            let analyticsContainer = detailsContainer.querySelector('.analytics-panel');
            
            if (!analyticsContainer) {
                analyticsContainer = document.createElement('div');
                analyticsContainer.className = 'analytics-panel';
                
                // Add header
                const header = document.createElement('h3');
                header.textContent = 'Project Analytics';
                analyticsContainer.appendChild(header);
                
                // Add analytics grid
                const grid = document.createElement('div');
                grid.className = 'analytics-grid';
                analyticsContainer.appendChild(grid);
                
                detailsContainer.appendChild(analyticsContainer);
            }
            
            // Get the analytics grid
            const grid = analyticsContainer.querySelector('.analytics-grid');
            grid.innerHTML = '';
            
            // Calculate metrics based on bucket names using the mapping
            const totalTasks = tasks.length;
            
            const toDoTasks = tasks.filter(t => {
                if (t.isOverdue) return false;
                const bucketName = t.actualBucketName?.toLowerCase() || '';
                return bucketMapping['to-do'].some(name => bucketName.includes(name));
            }).length;
            
            const inProgressTasks = tasks.filter(t => {
                if (t.isOverdue) return false;
                const bucketName = t.actualBucketName?.toLowerCase() || '';
                return bucketMapping['in-progress'].some(name => bucketName.includes(name));
            }).length;
            
            const testedTasks = tasks.filter(t => {
                if (t.isOverdue) return false;
                const bucketName = t.actualBucketName?.toLowerCase() || '';
                return bucketMapping['tested'].some(name => bucketName.includes(name));
            }).length;
            
            const completedTasks = tasks.filter(t => {
                if (t.isOverdue) return false;
                const bucketName = t.actualBucketName?.toLowerCase() || '';
                return bucketMapping['completed'].some(name => bucketName.includes(name));
            }).length;
            
            const overdueTasks = tasks.filter(t => t.isOverdue).length;
            
            const uncategorizedTasks = tasks.filter(t => {
                if (t.isOverdue) return false;
                const bucketName = t.actualBucketName?.toLowerCase() || '';
                return !bucketMapping['to-do'].some(name => bucketName.includes(name)) && 
                       !bucketMapping['in-progress'].some(name => bucketName.includes(name)) && 
                       !bucketMapping['tested'].some(name => bucketName.includes(name)) && 
                       !bucketMapping['completed'].some(name => bucketName.includes(name));
            }).length;
            
            // Calculate completion percentage
            const completionPercentage = totalTasks > 0 ? Math.round(((completedTasks + testedTasks) / totalTasks) * 100) : 0;
            
            // Add metric cards
            addMetricCard(grid, 'Total Tasks', totalTasks);
            addMetricCard(grid, 'To-Do', toDoTasks);
            addMetricCard(grid, 'In Progress', inProgressTasks);
            addMetricCard(grid, 'Tested', testedTasks);
            addMetricCard(grid, 'Completed', completedTasks);
            addMetricCard(grid, 'Overdue', overdueTasks, overdueTasks > 0);
            addMetricCard(grid, 'Uncategorized', uncategorizedTasks);
            addMetricCard(grid, 'Completion', `${completionPercentage}%`);
        }
        
        function addMetricCard(container, label, value, isWarning = false) {
            const card = document.createElement('div');
            card.className = `metric-card${isWarning ? ' warning' : ''}`;
            
            const labelElement = document.createElement('div');
