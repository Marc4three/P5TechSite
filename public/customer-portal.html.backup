                    } else {
                        console.error('No organization found for user:', orgEmail);
                        projectsGrid.innerHTML = '<div class="error-message">Unable to load your organization\'s projects</div>';
                    }
                } else {
                    console.error('Failed to initialize Planner integration');
                    projectsGrid.innerHTML = '<div class="error-message">Failed to connect to Microsoft Planner</div>';
                }
            } catch (error) {
